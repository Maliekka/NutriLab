<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green">
        </androidx.appcompat.widget.Toolbar>


        <ImageView
            android:src="@drawable/logo"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </ImageView>

        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Inicia Sesión "
            android:textColor="#73b378"
            android:background="@drawable/bordertext"
            android:padding="3dp"
            android:fontFamily="@font/corporative"
            />



        <EditText
            android:id="@+id/logmail"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Correo electrónico"
            android:shadowColor="@color/red"
            android:textColor="#3b3b3b"
            android:textColorHint="@color/hint"
            android:background="@drawable/bordericons"

            android:padding="5dp"
            >
        </EditText>


        <EditText
            android:id="@+id/logpass"
            android:inputType="textPassword"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textColorHint="@color/hint"
            android:hint="Contraseña"
            android:shadowColor="@color/red"
            android:textColor="#3b3b3b"
            android:drawableRight="@drawable/ic_eye"
            android:background="@drawable/bordericons">
        </EditText>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/register"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lightred"
                android:textColor="@color/white"
                android:text="Regístrate"
                android:layout_margin="5dp"
                android:fontFamily="@font/corporative"
                >

            </Button>
            <!--android:textColor="#525252" second button-->
            <Button
                android:id="@+id/login"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:textColor="@color/white"
                android:text="Entrar"
                android:backgroundTint="#73b378"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/corporative">
            </Button>
        </LinearLayout>



        <TextView
            android:id="@+id/forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="center">
        </TextView>

    </LinearLayout>

</ScrollView>
