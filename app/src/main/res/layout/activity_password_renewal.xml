<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".passwordRenewal">

        <ImageView
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:src="@drawable/unlock"
            android:layout_width="150dp"
            android:layout_height="150dp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15sp"

            android:gravity="center"

            android:fontFamily="@font/corporative"
            android:text="Responde la pregunta de seguridad y cambia tu contrase침a"
            android:textColor="@color/green"
            android:textSize="25sp"></TextView>

        <TextView
            android:id="@+id/questionRecover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="7dp"
            android:hint="Pregunta de Seguridad"
            android:background="@drawable/bordertext"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:textColor="@color/textMain">

        </TextView>
        <EditText
            android:id="@+id/ansRecovery"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50sp"
            android:textAlignment="center"
            android:hint="Tu respuesta"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:layout_margin="10dp">
        </EditText>

        <EditText
            android:id="@+id/etNewPass1"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50sp"
            android:hint="Nueva Contrase침a"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:layout_marginTop="20dp">
        </EditText>
        <EditText
            android:id="@+id/etNewPass2"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50sp"

            android:hint="Confirmaci칩n"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            android:textColor="@color/textMain"
            android:layout_margin="10dp">
        </EditText>

        <Button
            android:id="@+id/nextRecovery"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="Cambiar Contrase침a"
            android:backgroundTint="@color/red"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_margin="30dp"
            android:layout_height="50dp"
            android:fontFamily="@font/corporative">
        </Button>
    </LinearLayout>
</ScrollView>