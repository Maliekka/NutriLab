<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Nutricionist.nutriProfileFragment"
        >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"

                    android:padding="5dp"
                    android:text="Tu perfil"
                    android:textColor="@color/green">
                </TextView>

                <ImageView
                    android:id="@+id/nutPrPic"
                    android:layout_width="155dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="21dp">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/corporative"
                        android:textColor="@color/lightred">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/textMain"
                        android:id="@+id/NutriProfileName">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apellidos"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/corporative"
                        android:textColor="@color/lightred">
                    </TextView>

                    <TextView
                        android:id="@+id/NutriProfileLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="10dp"
                        android:textColor="@color/textMain"
                        android:textSize="15sp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de Cédula"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/corporative"
                        android:textColor="@color/lightred">
                    </TextView>

                    <TextView
                        android:id="@+id/NutriProfileNced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/textMain">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dirección de Consultorio"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/corporative"
                        android:textColor="@color/lightred">
                    </TextView>

                    <TextView
                        android:id="@+id/NutriProfileAbout"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:text=""
                        android:layout_gravity="center"
                        android:textColor="@color/textMain">

                    </TextView>
                </LinearLayout>

                <TextView
                    android:fontFamily="@font/corporative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario"
                    android:layout_margin="15dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/lightred">
                </TextView>

                <LinearLayout
                    android:id="@+id/scheduleProfileNut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/bordericons">

                </LinearLayout>



            </LinearLayout>


        </ScrollView>

        <ImageButton
            android:id="@+id/editNutriProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/editicon">

        </ImageButton>

    </RelativeLayout>



    </FrameLayout>


