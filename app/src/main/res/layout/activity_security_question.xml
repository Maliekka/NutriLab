<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".securityQuestion">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/naranja"
            android:layout_margin="20dp">

        </ImageView>
        <TextView
            android:background="@drawable/bordertext"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:fontFamily="@font/corporative"
            android:padding="5dp"
            android:text="Responde una pregunta de seguridad para recuperar tu contraseÃ±a si la olvidas"
            android:textColor="@color/green">
        </TextView>



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/selectedQuestion"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:hint="Elige una pregunta"
                android:gravity="center"
                android:textColor="@color/textMain"
                android:textColorHint="@color/hint"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <Spinner
                android:id="@+id/spinnerQuestion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:spinnerMode="dropdown" />

        </LinearLayout>


        <EditText
            android:id="@+id/secret_answer_r"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50sp"
            android:hint="Respuesta secreta"
            android:textColorHint="@color/hint"
            android:textSize="20sp"
            android:textColor="@color/textMain"
            android:layout_margin="20dp">

        </EditText>

        <Button
            android:id="@+id/btnSecurity"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Guardar"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:backgroundTint="#73b378"
            android:layout_height="50dp"
            android:fontFamily="@font/corporative">
        </Button>
    </LinearLayout>

</ScrollView>

